generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  phone        String?   @unique
  passwordHash String
  isWorker     Boolean   @default(false)
  isEmployer   Boolean   @default(false)
  isActive     Boolean   @default(true)
  isVerified   Boolean   @default(false)
  bannedAt     DateTime?
  lastLoginAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  employee     EmployeeProfile?
  employer     EmployerProfile?
  applications JobApplication[]
  reviewsGiven Review[]   @relation("reviews_given")
  reviewsTaken Review[]   @relation("reviews_taken")
  notifications Notification[]
  emailVerifications EmailVerification[]
}

model EmployeeProfile {
  id        Int     @id @default(autoincrement())
  userId    Int     @unique
  bio       String?
  skills    Json?
  dob       DateTime?
  gender    String?
  user      User    @relation(fields: [userId], references: [id])
}

model EmployerProfile {
  id           Int    @id @default(autoincrement())
  userId       Int    @unique
  companyName  String
  companyAddress String?
  user         User   @relation(fields: [userId], references: [id])
  jobs         Job[]
}

model Job {
  id          Int       @id @default(autoincrement())
  employerId  Int
  title       String
  description String
  location    String
  startDate   DateTime
  durationDays Int
  workerQuota Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  employer    EmployerProfile @relation(fields: [employerId], references: [id])
  sessions    JobSession[]
  skills      JobRequiredSkill[]
  applications JobApplication[]
  reviews     Review[]
}

model JobRequiredSkill {
  jobId     Int
  skillName String
  job       Job   @relation(fields: [jobId], references: [id])
  @@id([jobId, skillName])
}

model JobSession {
  id        Int      @id @default(autoincrement())
  jobId     Int
  sessionDate DateTime
  startTime DateTime
  endTime   DateTime
  job       Job      @relation(fields: [jobId], references: [id])
}

enum ApplicationStatus {
  pending
  accepted
  confirmed
  completed
  cancelled
}

model JobApplication {
  id        Int               @id @default(autoincrement())
  jobId     Int
  workerId  Int
  status    ApplicationStatus @default(pending)
  appliedAt DateTime          @default(now())
  job       Job               @relation(fields: [jobId], references: [id])
  worker    User              @relation(fields: [workerId], references: [id])
}

model Review {
  id         Int      @id @default(autoincrement())
  jobId      Int
  reviewerId Int
  revieweeId Int
  rating     Int
  comment    String?
  createdAt  DateTime @default(now())
  reviewer   User     @relation("reviews_given", fields: [reviewerId], references: [id])
  reviewee   User     @relation("reviews_taken", fields: [revieweeId], references: [id])
  job        Job      @relation(fields: [jobId], references: [id])
  @@unique([jobId, reviewerId])
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  type      String
  title     String
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model EmailVerification {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
