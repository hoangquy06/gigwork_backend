generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  phone        String?   @unique
  passwordHash String
  isWorker     Boolean   @default(false)
  isEmployer   Boolean   @default(false)
  isActive     Boolean   @default(true)
  isVerified   Boolean   @default(false)
  bannedAt     DateTime?
  lastLoginAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  employee     EmployeeProfile?
  employer     EmployerProfile?
  applications JobApplication[]
  reviewsGiven Review[]   @relation("reviews_given")
  reviewsTaken Review[]   @relation("reviews_taken")
  notifications Notification[]
  emailVerifications EmailVerification[]
  profileImages ProfileImage[]
  jobs         Job[]
}

model EmployeeProfile {
  id        Int     @id @default(autoincrement())
  userId    Int     @unique
  bio       String?
  skills    Json?
  dob       DateTime?
  gender    String?
  user      User    @relation(fields: [userId], references: [id])
}

model EmployerProfile {
  id           Int    @id @default(autoincrement())
  userId       Int    @unique
  companyName  String
  companyAddress String?
  user         User   @relation(fields: [userId], references: [id])
}

model Job {
  id          Int       @id @default(autoincrement())
  employerId  Int
  title       String
  description String
  startDate   DateTime
  durationDays Int
  workerQuota Int
  salary      Int       @default(300000)
  status      JobStatus  @default(open)
  type        JobType   @default(others)
  locationId  Int? @unique
  sessionId   Int? @unique
  skillId     Int? @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  employer    User @relation(fields: [employerId], references: [id])
  sessions    JobSession[] @relation("JobSessions")
  skills      JobRequiredSkill[] @relation("JobSkills")
  applications JobApplication[]
  reviews     Review[]
  locationByJobId JobLocation? @relation("JobToLocation")
  locationRef     JobLocation? @relation("JobToLocationById", fields: [locationId], references: [jobId], onDelete: SetNull)
  primarySession   JobSession?        @relation("JobPrimarySession", fields: [sessionId], references: [id], onDelete: SetNull)
  primarySkill     JobRequiredSkill?  @relation("JobPrimarySkill", fields: [skillId], references: [id], onDelete: SetNull)
}

model JobRequiredSkill {
  id        Int      @id @default(autoincrement())
  jobId     Int
  skillName String
  job       Job      @relation("JobSkills", fields: [jobId], references: [id])
  primaryForJob Job? @relation("JobPrimarySkill")
  @@unique([jobId, skillName])
}

model JobSession {
  id        Int      @id @default(autoincrement())
  jobId     Int
  sessionDate DateTime
  startTime DateTime
  endTime   DateTime
  job       Job      @relation("JobSessions", fields: [jobId], references: [id])
  primaryForJob Job? @relation("JobPrimarySession")
}

enum ApplicationStatus {
  pending
  accepted
  confirmed
  completed
  cancelled
}

enum JobStatus {
  open
  full
  ongoing
  completed
}

enum JobType {
  physical_work
  fnb
  event
  retail
  others
}

model JobLocation {
  jobId    Int @id
  province String
  city     String
  ward     String?
  address  String
  job              Job  @relation("JobToLocation", fields: [jobId], references: [id], onDelete: Cascade)
  jobByLocationId  Job? @relation("JobToLocationById")

  @@index([province, city, ward])
}

enum ProfileRole {
  employee
  employer
}

enum ImageKind {
  avatar
  company_logo
  other
}

model ProfileImage {
  id          Int          @id @default(autoincrement())
  userId      Int
  role        ProfileRole
  kind        ImageKind
  contentType String
  size        Int
  data        Bytes
  isPrimary   Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  user        User         @relation(fields: [userId], references: [id])

  @@index([userId, role])
}

model JobApplication {
  id        Int      @id @default(autoincrement())
  jobId     Int
  workerId  Int
  status    ApplicationStatus @default(pending)
  isComplete Boolean  @default(false)
  isPaid     Boolean  @default(false)
  appliedAt DateTime @default(now())
  job       Job      @relation(fields: [jobId], references: [id])
  worker    User     @relation(fields: [workerId], references: [id])
}

model Review {
  id         Int      @id @default(autoincrement())
  jobId      Int
  reviewerId Int
  revieweeId Int
  rating     Int
  comment    String?
  createdAt  DateTime @default(now())
  reviewer   User     @relation("reviews_given", fields: [reviewerId], references: [id])
  reviewee   User     @relation("reviews_taken", fields: [revieweeId], references: [id])
  job        Job      @relation(fields: [jobId], references: [id])
  @@unique([jobId, reviewerId])
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  type      String
  title     String
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model EmailVerification {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
